<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Thông tin bàn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSoBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bàn 01"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvViTri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vị trí: Khu A"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvSoChoNgoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số chỗ: 4"
                android:textSize="14sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvTrangThaiBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trống"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvMoTa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gần cửa sổ"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

        <!-- Nút điều khiển -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnSua"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginBottom="8dp"
                android:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnCapNhatTrangThai"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_refresh"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginBottom="8dp"
                android:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnXoa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>